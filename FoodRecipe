## üìÑ **10. `HomeScreen.js`**
```javascript
import React, { useState } from 'react';
import { View, Text, ScrollView, Image, StyleSheet, TouchableOpacity } from 'react-native';
import { StatusBar } from 'expo-status-bar';
import { useNavigation } from '@react-navigation/native';
import { categories, recipes } from './recipes';
import CategoryCard from './CategoryCard';
import RecipeCard from './RecipeCard';
import { wp, hp } from './responsive';

const HomeScreen = () => {
  const [activeCategory, setActiveCategory] = useState("Chicken");
  const navigation = useNavigation();

  const filteredRecipes = recipes.filter(recipe => recipe.category === activeCategory);

  return (
    <ScrollView style={styles.container}>
      <StatusBar style="dark" />
      
      {/* Header */}
      <View style={styles.header}>
        <Image
          source={{ uri: 'https://randomuser.me/api/portraits/men/32.jpg' }}
          style={styles.avatar}
        />
        <View style={styles.headerText}>
          <Text style={styles.greeting}>Hello, User!</Text>
          <Text style={styles.subGreeting}>What do you want to cook today?</Text>
        </View>
        <TouchableOpacity 
          style={styles.favoritesButton}
          onPress={() => navigation.navigate('FavoriteScreen')}
        >
          <Text style={styles.heartIcon}>‚ù§Ô∏è</Text>
        </TouchableOpacity>
      </View>

      {/* Title Section */}
      <View style={styles.titleSection}>
        <Text style={styles.mainTitle}>Make your own food</Text>
        <Text style={styles.subtitle}>stay at home</Text>
      </View>

      {/* Categories */}
      <ScrollView
        horizontal
        showsHorizontalScrollIndicator={false}
        style={styles.categoryContainer}
      >
        {categories.map((category) => (
          <CategoryCard
            key={category.id}
            category={category}
            activeCategory={activeCategory}
            onPress={setActiveCategory}
          />
        ))}
      </ScrollView>

      {/* Recipes Grid */}
      <View style={styles.recipeGrid}>
        {filteredRecipes.map((recipe) => (
          <RecipeCard 
            key={recipe.id} 
            recipe={recipe} 
            onPress={() => navigation.navigate('RecipeDetail', { recipe })}
          />
        ))}
      </View>

      {/* Bottom Navigation */}
      <View style={styles.bottomNav}>
        <TouchableOpacity 
          style={styles.navButton}
          onPress={() => navigation.navigate('Home')}
        >
          <Text style={styles.navButtonText}>üè† Home</Text>
        </TouchableOpacity>
        <TouchableOpacity 
          style={styles.navButton}
          onPress={() => navigation.navigate('FavoriteScreen')}
        >
          <Text style={styles.navButtonText}>‚ù§Ô∏è Favorites</Text>
        </TouchableOpacity>
        <TouchableOpacity 
          style={styles.navButton}
          onPress={() => navigation.navigate('MyRecipeScreen')}
        >
          <Text style={styles.navButtonText}>üìù My Recipes</Text>
        </TouchableOpacity>
      </View>
    </ScrollView>
  );
};

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#fff',
  },
  header: {
    flexDirection: 'row',
    alignItems: 'center',
    paddingHorizontal: wp(5),
    paddingTop: hp(5),
    paddingBottom: hp(2),
    backgroundColor: '#f8f8f8',
  },
  avatar: {
    width: wp(12),
    height: wp(12),
    borderRadius: wp(6),
    marginRight: wp(4),
  },
  headerText: {
    flex: 1,
  },
  greeting: {
    fontSize: hp(2.5),
    fontWeight: '600',
    color: '#333',
  },
  subGreeting: {
    fontSize: hp(1.8),
    color: '#666',
    marginTop: hp(0.5),
  },
  favoritesButton: {
    backgroundColor: '#fff',
    padding: wp(3),
    borderRadius: wp(3),
    elevation: 2,
  },
  heartIcon: {
    fontSize: hp(2.5),
  },
  titleSection: {
    paddingHorizontal: wp(5),
    marginTop: hp(2),
    marginBottom: hp(3),
  },
  mainTitle: {
    fontSize: hp(3.5),
    fontWeight: 'bold',
    color: '#333',
  },
  subtitle: {
    fontSize: hp(2.2),
    color: '#666',
    marginTop: hp(0.5),
  },
  categoryContainer: {
    marginBottom: hp(3),
    paddingHorizontal: wp(4),
  },
  recipeGrid: {
    flexDirection: 'row',
    flexWrap: 'wrap',
    paddingHorizontal: wp(2),
    paddingBottom: hp(10),
  },
  bottomNav: {
    flexDirection: 'row',
    justifyContent: 'space-around',
    paddingVertical: hp(2),
    backgroundColor: '#f8f8f8',
    position: 'absolute',
    bottom: 0,
    left: 0,
    right: 0,
    borderTopWidth: 1,
    borderTopColor: '#ddd',
  },
  navButton: {
    alignItems: 'center',
    padding: wp(3),
  },
  navButtonText: {
    fontSize: hp(1.8),
